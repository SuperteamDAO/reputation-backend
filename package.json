{
  "name": "superteam-reputation-backend",
  "version": "1.0.0",
  "description": "Express Backend for Superteam Reputation Dashboard",
  "main": "dist/index.js",
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "scripts": {
    "build": "tsup src/* --outDir dist",
    "dev": "cross-env NODE_ENV=development nodemon",
    "prod": "cross-env NODE_ENV=production nodemon",
    "lint": "eslint src/**/*.ts",
    "start": "prisma generate && node dist/index.js",
    "format": "eslint src/**/*.ts --fix",
    "prepare": "husky install"
  },
  "keywords": [
    "superteamDAO"
  ],
  "author": "@irffanasiff",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^4.8.0",
    "@types/body-parser": "^1.19.2",
    "@typescript-eslint/eslint-plugin": "^5.45.1",
    "@typescript-eslint/parser": "^5.45.1",
    "airtable": "^0.11.6",
    "body-parser": "^1.20.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "envalid": "^7.3.1",
    "eslint": "^8.29.0",
    "express": "^4.18.2",
    "express-validator": "^6.14.2",
    "helmet": "^6.0.1",
    "morgan": "^1.10.0",
    "morgan-body": "^2.6.8",
    "mysql2": "^2.3.3",
    "node-schedule": "^2.1.0",
    "prettier": "^2.8.1",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.1",
    "tsup": "^6.5.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.14",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.11.11",
    "@types/node-schedule": "^2.1.0",
    "husky": "^8.0.2",
    "nodemon": "^2.0.20",
    "prisma": "^4.8.0",
    "typescript": "^4.9.3"
  }
}
